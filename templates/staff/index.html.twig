{% extends 'base.html.twig' %}

{% block title %}Data Karyawan{% endblock %}

{% block body %}
      
<div class="container">
  <div class="row">
  {% include 'dashboard/Navbar.html.twig' %} 

    <div class="col-12"> 
    <h3>Data Karyawan</h3>

    <a href="{{ path('app_staff_new') }}" class="btn btn-sm btn-primary me-2">Tambah Data</a>
    
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kode</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff in staff %}
            <tr>
                <td>{{ staff.id }}</td>
                <td>{{ staff.kode }}</td>
                <td>{{ staff.name }}</td>
                <td>{{ staff.address }}</td>
                <td>{{ staff.phone }}</td>
                <td>{{ staff.email }}</td>
                <td>{{ staff.password }}</td>
                <td>
                    <a href="{{ path('app_staff_show', {'id': staff.id}) }}" class="btn btn-sm btn-success me-2">show</a>
                    <a href="{{ path('app_staff_edit', {'id': staff.id}) }}" class="btn btn-sm btn-success me-2">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No Records Found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
    </div>
  </div>
</div>
    
{% endblock %}
