{% extends 'base.html.twig' %}

{% block title %}Staff{% endblock %}

{% block body %}
    <h2>Karyawan</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ staff.id }}</td>
            </tr>
            <tr>
                <th>Kode</th>
                <td>{{ staff.kode }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ staff.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ staff.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ staff.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ staff.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ staff.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_staff_index') }}" class="btn btn-secondary btn-sm">kembali</a>

    <a href="{{ path('app_staff_edit', {'id': staff.id}) }}" class="btn btn-primary btn-sm">Edit</a>

    {{ include('staff/_delete_form.html.twig') }}
{% endblock %}
